@{
}

@model MegaTechMVC.Models.Entities.Location


<h1>Edit Location</h1>

@if (Model is null)
{
	<p>No Location Found!</p>
}
else
{
	<form method="post">
		<div class="mt-3">
			<label class="form-label">Location Name</label>
			<input type="text" class="form-control" name="originalName" value="@Model.Name" readonly />
		</div>
		<div class="mt-3">
			<label class="form-label">New Location Name</label>
			<input type="text" class="form-control" name="newName" />
		</div>

		<div class="mt-3">
			<button type="submit" class="btn btn-primary">Save</button>
			<button type="submit" class="btn btn-danger ms-3"
					asp-action="Delete"
					asp-controller="Location">
				Delete
			</button>
		</div>
	</form>

}


